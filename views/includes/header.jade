header#header
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
                    span.sr-only
                        | Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/')
                    img(src='/img/logos/ECE.png')
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    if (session !== true)
                        li#home.active: a(href='/')
                            i.fa.fa-home &nbsp;
                            | Home
                    else
                        li#home.active: a(href='/user/#{username}')
                            i.fa.fa-home &nbsp;
                            | Dashboard
                if (session === true)
                    ul.nav.navbar-nav.navbar-right
                        li#user: a(href='/user/#{username}')
                            i.fa.fa-user &nbsp;
                            | #{username}
                        li#logout: a(href='/logout')
                            i.fa.fa-power-off &nbsp;
                            | Log out
