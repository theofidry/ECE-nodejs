#content
  margin-top 50px

.form-signin
  max-width 330px
  padding 15px
  margin 0 auto

  button
    border none
    height 44px
    margin-top 20px

  input
    height 44px
    margin-top 20px

#footer
  background-color #f5f5f5
  bottom 0
  height 60px
  left 0
  position absolute
  right 0
  line-height 60px

.error-page
  background linear-gradient(45deg, rgba(24, 68, 130, 1) 0%, rgba(21, 93, 166, 1) 53%, rgba(22, 113, 170, 1) 99%)
  bottom 0
  left 0
  padding-top 100px /*TODO: Replace this line to vertical align the message.*/
  position absolute
  right 0
  text-align center
  top 0
  width auto

.error-page, .error-page h1, .error-page p
  color #fff
  text-shadow 1px 1px 2px rgba(43, 43, 43, 1)
